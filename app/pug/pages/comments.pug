include ../data/menu
include ../data/socials

include ../mixins/image
include ../mixins/menu
include ../mixins/socials
include ../mixins/breadcrumbs

- const pageName = "Отзывы"

doctype html
html(lang='ru')
  head
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Афродита | Отзывы
    link(rel='icon', href='./assets/images/favicon.png')
    link(rel='stylesheet', href='./assets/css/main.min.css')
  body
    .wrapper
      include ../sections/header
      .page
        .page__container.container.container--w1160
          aside.sidebar
            .sidebar__container
              +menu({
                list: menu,
                blockClass: "sidebar__menu"
              })
              .sidebar__flack
                include ../sections/flack
              +socials({
                list: socials,
                blockClass: "sidebar__socials",
                listClass: "socials__list--center",
                itemClass: "socials__item--bg-transparent"
              })
          main.maincontent
            +breadcrumbs({
              pageName,
              blockClass: 'page__breadcrumbs'
            })
            include ../sections/review
            include ../sections/feedback
      include ../sections/footer